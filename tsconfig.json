{
  "compilerOptions": {
    "resolveJsonModule": true,
    "lib": [
      "ES2023"
    ],
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "include": ["./src/**/*"]
}